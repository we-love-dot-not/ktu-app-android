<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lt.hacker_house.ktu_ais">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name="lt.hacker_house.ktu_ais.App"
        android:allowBackup="true"
        android:icon="@mipmap/trash_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trash_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="lt.hacker_house.ktu_ais.views.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="lt.hacker_house.ktu_ais.views.activities.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="lt.hacker_house.ktu_ais.views.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <service
            android:name="lt.hacker_house.ktu_ais.services.GetGradesIntentService"
            android:exported="false"/>

    </application>

</manifest>